{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
    <h1>Hello Stadline</h1>

    <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
            <input type="text" name="username" class="form-control" placeholder="Search" required>
        </div>
        <button type="submit" class="btn btn-default">Search</button>
    </form>
    <br>
    <table class="table">
        <thead>
        <tr>
            <th>Avatar</th>
            <th>Id</th>
            <th>Login</th>
            <th>Action(s)</th>
        </tr>
        </thead>
        <tbody>
        {% for gitHubUser in gitHubUsers %}
            <tr>
                <td>
                    <img src="{{ gitHubUser.avatar_url }}" class="img-fluid" style="max-height: 6rem" alt="None">
                </td>
                <td>{{ gitHubUser.id }}</td>
                <td>{{ gitHubUser.login }}</td>
                <td>
                    <a href="{{ path('comment_new', {'username': gitHubUser.login}) }}">Add new comment</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}